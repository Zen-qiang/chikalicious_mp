/* pages/allProduct/allProduct.wxss */

.contenter {
  min-height: 100%;
  background-color: #f7f5f1;
}

.contenter .top scroll-view {
  font-size: 32rpx;
  position: fixed;
  background-color: #fff;
  overflow:hidden;
  white-space:nowrap;
}

.contenter .top .top_tab_butt {
  color: #c7c7c6;
  width: auto;
  height: 54rpx;
  line-height: 54rpx;
  padding: 0 40rpx;
  display: inline-block;
  margin: 10rpx 0 20rpx 0;
}

.contenter .top .checked {
  color: #ecb546;
  border-radius: 35rpx;
  box-shadow: 3rpx 6rpx 29rpx 2rpx rgba(234, 181, 74, 0.18);
}

.contenter .top .white_space {
  height: 84rpx;
}

/*  */

.contenter .con {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
