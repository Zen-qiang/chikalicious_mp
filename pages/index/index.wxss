/**index.wxss 主页**/

page {
  height: 100%;
  font-size: 24rpx;
}

/*  */

.index-container {
  width: 100%;
  height: 40rpx;
}

.index-container image {
  width: 40rpx;
  height: 30rpx;
  margin: 5rpx 10rpx 5rpx 30rpx;
  float: left;
}

.index-container .location {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
}

/*  */

.carousel-swiper {
  height: 289rpx;
  position: relative;
}

.swiper_title {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  color: #fff;
  font-size: 30rpx;
}

.carousel-image {
  width: 100%;
}

/* 标题 */

.msg_title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #b3b1b1;
  font-size: 30rpx;
  overflow: hidden;
}

/*  */

.new_prod {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.new_prod .left {
  width: calc(66.66% - 2px);
  float: left;
}

.new_prod .right {
  width: calc(33.33% - 2px);
  float: right;
}

.new_prod .row1 {
  height: 550rpx;
}

.new_prod .left .top {
  height: calc(50% - 2px);
}

.new_prod .left .bottom {
  margin-top: 4px;
  height: calc(50% - 2px);
}

.new_prod .left .top .tleft {
  width: calc(50% - 2px);
  height: 100%;
  float: left;
}

.new_prod .left .top .tright {
  width: calc(50% - 2px);
  height: 100%;
  float: right;
}

/*  */

.msg_con {
  position: relative;
  font-size: 24rpx;
}

.msg_con .msg_con_img {
  width: 100%;
  height: 100%;
}

.msg_con .msg_con_text {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  font-weight: 400;
}

.msg_con .msg_con_text .msg_con_text1 {
  padding: 50rpx 20rpx 0;
}

.msg_con .msg_con_text .msg_con_text2 {
  padding: 0 20rpx;
  color: #ecb546;
}
