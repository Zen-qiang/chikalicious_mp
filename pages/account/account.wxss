/* pages/account/account.wxss */

.header {
  height: 300rpx;
  overflow: hidden;
  background-color: #fff;
}

.header .left {
  float: left;
  height: 300rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 80rpx;
}

.name {
  font-size: 43rpx;
  font-weight: 500;
  color: #000;
}

.header .right {
  float: right;
  width: 210rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 80rpx;
  box-sizing: border-box;
}

.header .right .logo {
  width: 130rpx;
  height: 130rpx;
  border-radius: 130rpx;
}

/*  */

.order {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.order .line {
  width: 100%;
  height: 1px;
  border-bottom: 1px solid #efefef;
  box-sizing: border-box;
}

.order .order_cell {
  width: 100%;
  overflow: hidden;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.order .order_cell .cleft {
  float: left;
  height: 130rpx;
  line-height: 130rpx;
  font-size: 32rpx;
  color: #000;
}

.order .order_cell .cright {
  float: right;
  height: 130rpx;
  line-height: 130rpx;
  font-size: 28rpx;
  color: #b7b5b5;
  font-weight: 200;
}

.order .row {
  height: 220rpx;
  padding: 0 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order .row .cell image {
  width: 80rpx;
  height: 80rpx;
}

.order .row .cell view {
  font-size: 28rpx;
}

.panel-butt {
  margin: 40rpx 0;
}

.butt {
  padding: 0;
  text-align: left;
}

button {
  background-color: inherit;
}

button::after {
  border: none;
}

.login_out {
  background-color: inherit;
  color: #c3c3c3;
  font-size: 28rpx;
}
