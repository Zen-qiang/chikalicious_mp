/* pages/buyNowSnack/buyNowSnack.wxss */

.container {
  font-size: 27rpx;
  background-color: #f7f5f1;
  overflow: hidden;
}

.header {
  background-color: #fff;
  padding: 60rpx 80rpx;
  margin-top: 30rpx;
  overflow: hidden;
  border-bottom: 3px solid #ecb546;
  font-size: 26rpx;
}

.header .h_con {
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}

.header .contact {
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 7rpx;
}

.header .tell {
  display: block;
  float: right;
}

.header .butt {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #ecb546;
  background-color: #fff;
  border: 1px solid #ecb546;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 10rpx;
}

/*  */

.con {
  padding: 10rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.con .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con .line {
  border-bottom: 1px solid #f7f5f1;
}

.row1 .left {
  width: 182rpx;
  height: 182rpx;
}

.row1 .left image {
  width: 182rpx;
  height: 182rpx;
  border-radius: 7rpx;
}

.row1 .right {
  width: 50%;
  height: 182rpx;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  justify-content: left;
  align-items: center;
}

.row2 .right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-wrap: wrap;
}

.checkCon {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.checkbox {
  padding: 0 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #ecb546;
  background-color: #fff;
  border: 1px solid #ecb546;
  border-radius: 7rpx;
  text-align: center;
  margin: 5px;
}

.checked {
  background-color: #ecb546;
  color: #fff;
}

/*  */

.h_row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx 0;
}

/*  */

.message .area textarea {
  width: 100%;
  height: 150rpx;
  border: 1px solid #f7f5f1;
  margin: 10rpx 0 0 0;
}

/*  */

.footer {
  overflow: hidden;
}

.footer .amount {
  text-align: center;
  margin: 80rpx;
}

.footer .butt {
  width: 60%;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  background-color: #ecb546;
  color: #fff;
  font-size: 27rpx;
  margin: 30rpx auto 100rpx auto;
}
