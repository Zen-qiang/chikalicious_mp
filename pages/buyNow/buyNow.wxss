.container {
  font-size: 27rpx;
  background-color: #f7f5f1;
}

.header {
  background-color: #f7f5f1;
  padding: 30rpx 0;
  overflow: hidden;
}

.header .h_con {
  width: 80%;
  margin: 0 auto;
}

.header .contact {
  height: 115rpx;
  line-height: 115rpx;
  padding: 0 30rpx;
  border-radius: 7rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.header .tell {
  display: block;
  float: right;
}

.header .butt {
  width: 266rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  background-color: #ecb546;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 30rpx;
}

/*  */

.con {
  padding: 0 30rpx;
  background-color: #fff;
}

.con .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con .line {
  border-bottom: 1px solid #f7f5f1;
}

.row1 {
  padding: 30rpx 0;
}

.row1 .left {
  width: 182rpx;
  height: 182rpx;
}

.row1 .left image {
  width: 182rpx;
  height: 182rpx;
  border-radius: 7rpx;
}

.row1 .right {
  width: 50%;
  height: 182rpx;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  justify-content: left;
  align-items: center
}

.row2 .right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-wrap: wrap;
}

.row2 .right .checkbox {
  color: #ecb546;
  background-color: #fff;
  border: 1px solid #ecb546;
  border-radius: 7rpx;
  text-align: center;
  margin: 10rpx;
  padding: 0 40rpx;
  display: inline;
}

.row2 .right .checked {
  background-color: #ecb546;
  color: #fff;
}

.message .area textarea {
  width: 100%;
  height: 150rpx;
  border: 1px solid #f7f5f1;
  margin: 10rpx 0 50rpx 0;
}

/*  */

.footer {
  overflow: hidden;
}

.footer .amount {
  text-align: center;
  margin: 80rpx;
}

.footer .butt {
  width: 60%;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  background-color: #ecb546;
  color: #fff;
  font-size: 27rpx;
  margin: 30rpx auto 100rpx auto;
}
