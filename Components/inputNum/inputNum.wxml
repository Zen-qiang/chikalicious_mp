<!--Components/inoutNum/inputNum.wxml-->
<view class="stepper">
  <!-- 减号 -->
  <view class="minusbtn {{disabledMinus ? 'disabledBtn' : ''}}" bindtap="bindMinus">
    <image src="../../images/sub.png" style="width: 15px; height: 15px;"></image>
  </view>
  <!-- 数值 -->
  <input class="inputNum" type="number" bindchange="bindManual" value="{{num}}" />
  <!-- 加号 -->
  <view class="maxbtn {{disabledPlus ? 'disabledBtn' : ''}}" bindtap="bindPlus">
    <image src="../../images/add.png" style="width: 15px; height: 15px;"></image>
  </view>
</view>