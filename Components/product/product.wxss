.product-container {
  width: 320rpx;
  height: auto;
  margin: 0 20rpx 40rpx 20rpx;
  overflow: hidden;
  border-radius: 3px;
  box-shadow: 10rpx 10rpx 20rpx 7rpx rgba(210, 210, 210, 0.5);
}

/*  */

.img image {
  width: 320rpx;
  height: 320rpx;
}

.show_msg {
  width: 320rpx;
  height: 190rpx;
  overflow: hidden;
}

/*  */

.show_msg .left {
  float: left;
  width: 75%;
  height: 190rpx;
  padding-left: 30rpx;
  font-size: 27rpx;
  font-weight: 400;
  box-sizing: border-box;
}

.show_msg .left .title {
  color: #000;
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.show_msg .left .price {
  color: #ecb546;
  height: 100rpx;
  display: flex;
  align-items: center;
}

/*  */

.show_msg .right {
  float: right;
  width: 25%;
  height: 190rpx;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
}
